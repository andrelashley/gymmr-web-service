@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="h-100 d-flex justify-content-center align-items-center">
    <div class="text-center mt-5">
        <div asp-validation-summary="ModelOnly"></div>
        <img width="128" height="128" src="~/images/logo.png" />
        <form class="mt-3" asp-action="Login" method="post">
            <div class="form-group">
                <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email Address">
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <div class="form-group mt-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <button type="submit" class="btn btn-dark mt-3">Sign Up</button>
        </form>
        <p class="mt-3 mb-5">Don't have an account? <a asp-action="Signup" asp-controller="Home">Sign up</a>.</p>
        <p class="mt-5">I am at least 18 years of age and I agree to the <a href="#">Terms and Conditions</a>.</p>
    </div>
</div>